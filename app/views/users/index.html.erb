<div class="container">
    <div class="row">
            <% if flash[:notice] %>
                <div class="flash ">
                    <%= flash[:notice] %>
                </div>
            <% end %>
        
        <%= render 'users/info', user: @user, book: @book %>        
        <div class="col-xs-9">
            <h2>Users</h2>

            <main>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>image</th>
                            <th>name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @users.each do |user| %>
                            <tr>
                                <td>
                                <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback:'no_image.jpg', size:'50x50', class:'pull-left profile-thumb' %>
                                </td>
                                <td><%= user.name %></td>
                                <td><%= link_to "Show", user_path(user) %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            <main>
        </div>
    </div>
</div>