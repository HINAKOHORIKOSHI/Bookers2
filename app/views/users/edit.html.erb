<div class="container">
    <div class="row">
        <h2>User info</h2>

        <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
            <div id="error_explanation">
            <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
            </div>
        <% end %>


        <div class="col-xs-3">

                <label class="control-label" for="inputEmail">Name</label>
                <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail" %>
                <br>

                <label class="control-label" for="inputEmail">Image</label>
                <br>
                <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback:"no_image.jpg" %>
                <%= f.attachment_field :profile_image, placeholder:'プロフィール画像' %>
                <br>
                
                <label class="control-label" for="inputEmail">Introduction</label>
                <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputEmail"%>

                <br>
                <%= f.submit "Update User", class:"btn btn-block btn-primary" %>
            <% end %>
        </div>
    </div>
</div>