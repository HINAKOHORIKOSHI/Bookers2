<div class="container">
    <div class="row">
        <%= render 'users/info', user: @user, book: @book_new %>

        <div class="col-xs-9">
            <h2> Book detail</h2>
            <table class="table">
                <tr>
                    <td>
                        <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, fallback: 'no_image.jpg', size:'50x50', class:'pull-left profile-thumb' %>
                        <%= link_to @book.user.name, user_path(@book.user) %>
                    </td>
                    <td>
                        <%= link_to @book.title, book_path %>
                    </td>
                    <td>
                        <%= @book.body %>
                    </td>
                    <% if @book.user_id == current_user.id  %>
                        <td>    
                            <%= link_to "Edit", edit_book_path, class: 'btn btn-success' %>
                        </td>
                        <td>
                            <%= link_to "Destroy", book_path(@book), method: :delete, class: 'btn btn-danger', data: { confirm: '本当に削除しますか？' }%>
                        </td>
                    <% end %>
                </tr>
            </table>
        </div>
    </div>
</div>